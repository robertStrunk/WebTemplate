<% layout('layout') -%>

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1 class="display-4 mb-4"><%= title %></h1>
            <p class="lead mb-4"><%= message %></p>
            
            <div class="row mb-5">
                <div class="col-md-6">
                    <h3><i class="fas fa-cogs text-primary me-2"></i>Features</h3>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success me-2"></i>Express.js server</li>
                        <li><i class="fas fa-check text-success me-2"></i>EJS templating</li>
                        <li><i class="fas fa-check text-success me-2"></i>Bootstrap 5 UI</li>
                        <li><i class="fas fa-check text-success me-2"></i>RESTful API endpoints</li>
                        <li><i class="fas fa-check text-success me-2"></i>Security middleware</li>
                        <li><i class="fas fa-check text-success me-2"></i>Rate limiting</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h3><i class="fas fa-rocket text-primary me-2"></i>Quick Start</h3>
                    <ol>
                        <li>Clone the template</li>
                        <li>Install dependencies</li>
                        <li>Configure environment</li>
                        <li>Deploy to Heroku</li>
                    </ol>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="fas fa-code me-2"></i>Technology Stack</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Backend</h5>
                            <ul class="list-unstyled">
                                <li><i class="fab fa-node-js text-success me-2"></i>Node.js</li>
                                <li><i class="fas fa-server text-primary me-2"></i>Express.js</li>
                                <li><i class="fas fa-database text-warning me-2"></i>MongoDB (optional)</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h5>Frontend</h5>
                            <ul class="list-unstyled">
                                <li><i class="fab fa-bootstrap text-purple me-2"></i>Bootstrap 5</li>
                                <li><i class="fab fa-js text-warning me-2"></i>JavaScript</li>
                                <li><i class="fas fa-paint-brush text-info me-2"></i>Custom CSS</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
